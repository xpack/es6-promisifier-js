{
  "name": "@xpack/es6-promisifier",
  "version": "1.0.0",
  "description": "An ES6 promisifier wrapper",
  "main": "./index.js",
  "directories": {
    "bin": "./bin",
    "lib": "./lib",
    "test": "./test"
  },
  "bin": {},
  "scripts": {
    "prepublishOnly": "standard && npm run test-tap100 -s",
    "test": "standard && npm run test-tap -s",
    "test100": "standard && npm run test-tap100 -s",
    "test-coverage": "tap --coverage --reporter=classic --timeout 600 \"test/tap/*.js\"",
    "test-tap": "tap --reporter=classic --timeout 300 \"test/tap/*.js\"",
    "test-tap100": "tap --reporter=classic --timeout 300 --100 \"test/tap/*.js\"",
    "tap": "tap --reporter=spec --timeout 300",
    "fix": "standard --fix --verbose"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xpack/es6-promisifier-js.git"
  },
  "keywords": [
    "es6",
    "promise",
    "promisifer"
  ],
  "author": {
    "name": "Liviu Ionescu",
    "email": "ilg@livius.net",
    "url": "http://liviusdotnet.wordpress.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/xpack/es6-promisifier-js/issues"
  },
  "homepage": "https://github.com/xpack/es6-promisifier-js",
  "dependencies": {},
  "devDependencies": {
    "standard": "^14.3.1",
    "tap": "^14.9.2"
  },
  "peerDependencies": {},
  "bundledDependencies": [],
  "optionalDependencies": {},
  "engines": {
    "node": ">7.7.0"
  }
}
